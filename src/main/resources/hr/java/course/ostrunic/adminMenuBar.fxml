<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="25.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.java.course.ostrunic.controller.AdminMenuBarController">
   <children>
      <MenuBar prefHeight="25.0" prefWidth="800.0">
        <menus>
            <Menu mnemonicParsing="false" onAction="#showLoginScreen" text="Log out">
              <items>
                <MenuItem mnemonicParsing="false" text="Log out" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Students">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#showStudentsSearchScreen" text="Search" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Instructors">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#showInstructorsSearchScreen" text="Search" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Tasks">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#showTasksSearchScreen" text="Search" />
                  <MenuItem mnemonicParsing="false" onAction="#showAddNewTaskScreen" text="Add new Task" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Courses">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#showCoursesSearchScreen" text="Search" />
                  <MenuItem mnemonicParsing="false" onAction="#showAddNewCourseScreen" text="Add new Course" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Certificates">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#showCertificatesSearchScreen" text="Search" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Changes">
              <items>
                <MenuItem onAction="#showChangesScreen" mnemonicParsing="false" text="Show" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
