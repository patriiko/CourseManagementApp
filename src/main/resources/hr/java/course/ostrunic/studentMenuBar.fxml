<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="25.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.java.course.ostrunic.controller.StudentMenuBarController">
   <children>
      <MenuBar prefHeight="25.0" prefWidth="800.0">
        <menus>
          <Menu mnemonicParsing="false" text="Log out">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#showLoginScreen" text="Log out" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Courses">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#showStudentCourseSearchScreen" text="Search" />
                  <MenuItem mnemonicParsing="false" onAction="#showViewMyCoursesScreen" text="View my Courses" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Certificates">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#showViewMyCertificatesScreen" text="View my Certificates" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
